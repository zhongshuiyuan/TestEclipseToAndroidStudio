<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:eruntech="http://schemas.android.com/res/Eruntech.BirthStone.UI.Controls"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="190dp"
    android:layout_marginTop="100dp">

    <LinearLayout
        android:id="@+id/linearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/dialog_add_shape"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/degreeLabel"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:paddingTop="15dp"
                android:text="井  类  型：" 
                android:textColor="#000000"/>

            <Button
                android:id="@+id/degree"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@drawable/spinnerbk" 
                android:layout_weight="5" />
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="3dp"/>

            <Button
                android:id="@+id/edit"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="2"
                android:text="编辑井类型" 
                android:gravity="center"
                android:paddingLeft="3dp"
                android:background="@drawable/flatbutton"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvcq"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:text="管道产权：" 
                android:textColor="#000000"/>

            <Button
                android:id="@+id/degreecq"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="5"
                android:background="@drawable/spinnerbk" />
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="3dp"/>

            <Button
                android:id="@+id/editcq"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="2"
                android:paddingLeft="3dp"
                android:textSize="12dp"
                android:text="编辑管道产权" 
                android:background="@drawable/flatbutton"/>
        </LinearLayout>

        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="5dp"></LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" 
            android:gravity="center"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/qd"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/flatbutton"
                android:text="确定" />
            <TextView 
                android:layout_width="10dp"
                android:layout_height="20dp"/>

            <Button
                android:id="@+id/qx"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/flatbutton"
                android:text="取消"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>