<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.celerysoft.imagepager.ImagePager
        android:id="@+id/display_scene_image_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/display_scene_actionbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/app_design_background">

        <com.gc.materialdesign.views.ButtonIcon
            android:id="@+id/display_scene_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#006AC7"
            app:iconDrawable="@drawable/ic_arrow_left" />

        <View
            android:layout_width="1dp"
            android:layout_height="32dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/display_scene_btn_back"
            android:layout_toEndOf="@id/display_scene_btn_back"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/display_scene_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/display_scene_btn_back"
            android:layout_toEndOf="@id/display_scene_btn_back"
            android:layout_toLeftOf="@+id/display_scene_btn_delete"
            android:layout_toStartOf="@+id/display_scene_btn_delete"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/white"
            android:text="图片名称20151124142301"
            android:singleLine="true"/>

        <View
            android:layout_width="1dp"
            android:layout_height="32dp"
            android:layout_marginTop="12dp"
            android:layout_toLeftOf="@id/display_scene_btn_delete"
            android:layout_toStartOf="@id/display_scene_btn_delete"
            android:background="@color/white"/>

        <com.gc.materialdesign.views.ButtonIcon
            android:id="@+id/display_scene_btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/display_scene_btn_share"
            android:layout_toStartOf="@+id/display_scene_btn_share"
            android:background="#006AC7"
            app:iconDrawable="@drawable/ic_delete_white_48dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="32dp"
            android:layout_marginTop="12dp"
            android:layout_toLeftOf="@id/display_scene_btn_share"
            android:layout_toStartOf="@id/display_scene_btn_share"
            android:background="@color/white"/>

        <com.gc.materialdesign.views.ButtonIcon
            android:id="@+id/display_scene_btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#006AC7"
            app:iconDrawable="@drawable/ic_share_white_48dp" />

    </RelativeLayout>
    <View
        android:id="@+id/display_scene_actionbar_shadow"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@id/display_scene_actionbar"
        android:background="@color/app_design_shadow" />

</RelativeLayout>